<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/favouriteslayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" app:cardCornerRadius="6dp" app:cardElevation="4dp">
                    <ImageView
                        android:id="@+id/large_poster"
                        android:visibility="visible"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="173dp"
                        android:layout_height="259dp"/>
                </androidx.cardview.widget.CardView>
                <View
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/card_poster"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_toRightOf="@+id/card_poster">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:ellipsize="end"
                        android:id="@+id/MainTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TITLE "
                        android:maxLines="4"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:background="@mipmap/date"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/Maindate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Date"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:background="@mipmap/time"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/movie_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Time"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:background="@mipmap/imdb"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Rating"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_mpRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rated:"
                                android:fontFamily="sans-serif-light"/>
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/RED"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/mpa_rated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/title_synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"/>
                <TextView
                    android:textColor="#fff"
                    android:ellipsize="end"
                    android:id="@+id/synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="synopsis"
                    android:maxLines="10"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/mainhd"
                    android:background="@color/lightblack"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/shapeone"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/ic_download"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="bottom|center_vertical|center_horizontal|center"
                            android:id="@+id/qualityhd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="720p"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:id="@+id/hdlinear"
                        android:background="@drawable/shapeone_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/hdsize"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/hdseeds"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hdsize"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/hdpeers"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hdseeds"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/subimagelayoutone"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="5dp"
                                android:src="@mipmap/copy"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#fff"
                                android:id="@+id/hdcopyurl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Copy Url"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/mainfhd"
                    android:background="@color/lightblack"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/shapetwo"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/ic_download"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/qualityfhd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1080p"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/fhdlinear"
                        android:background="@drawable/shapetwo_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/fhdsize"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/fhdseeds"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fhdsize"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/fhdpeers"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fhdseeds"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/subimagelayouttwo"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="5dp"
                                android:src="@mipmap/copy"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#fff"
                                android:id="@+id/fhdcopyurl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Copy Url"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/main3d"
                    android:background="@color/lightblack"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/shapethree"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/ic_download"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/qualitythreed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="3D"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/dlinear"
                        android:background="@drawable/shapethree_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/dsize"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/dseeds"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dsize"/>
                        <TextView
                            android:textColor="#fff"
                            android:id="@+id/dpeers"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dseeds"/>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/subimagelayoutthree"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="5dp"
                                android:src="@mipmap/copy"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="#fff"
                                android:id="@+id/threedcopyurl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Copy Url"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/favouriteslayout"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/banner_detail_container">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_heart_empty"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:id="@+id/textfavourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Add To Collection"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/banner_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
